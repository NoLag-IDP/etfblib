-- ! BUTTON: red in private server, yellow in public
local function isPrivateServer()
	return #Players:GetPlayers() <= 1
end

local function updateInfoButton()
	if isPrivateServer() then
		InfoButton.TextColor3 = Color3.fromRGB(255, 80, 80)
		InfoButton.BackgroundColor3 = Color3.fromRGB(60, 35, 35)
	else
		InfoButton.TextColor3 = Color3.fromRGB(255, 210, 80)
		InfoButton.BackgroundColor3 = Color3.fromRGB(50, 50, 60)
	end
end

InfoButton.MouseButton1Click:Connect(function()
	if isPrivateServer() then
		showNotification("PRIVATE SERVER DETECTED", "Private servers are not supported, rejoin and use in public!")
	else
		showNotification("REMINDER", "THIS SCRIPT WONT WORK IN PRIVATE SERVERS!")
	end
end)

Players.PlayerAdded:Connect(updateInfoButton)
Players.PlayerRemoving:Connect(function()
	task.wait(0.1)
	updateInfoButton()
end)
updateInfoButton()

